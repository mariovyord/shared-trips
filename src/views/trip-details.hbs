<section class="py-5 details" id="trip-details-page">
	<div class="container">
		<div class="destination">
			<div>
				<span class="icon"><i class="fas fa-map-marked-alt"></i></span>
				<h5> from <span>{{post.start}}</span> to <span>{{post.end}}</span> </h5>
			</div>
			<div>
				<span class="icon"><i class="fas fa-calendar-alt"></i></span>
				<h5> <span>{{post.date}}</span> at <span>{{post.time}}</span> </h5>
			</div>
		</div>
		<p class="line"></p>
		<div class="buddies-info">
			<i class="fas fa-users buddies"></i>
			<h5>Shared trip Buddies</h5>
			<div>

				{{#if post.buddies}}
				<!-- if there are joined buddies for the current trip separate them with comma and space", " -->
				<p>{{post.buddies}}</p>
				{{else}}
				<!-- If not display: -->
				<p>there are no buddies yet...</p>
				{{/if}}
			</div>
			<h5>Driver: <span>{{post.creator.email}}</span> </h5>
		</div>
		<p class="line"></p>
		<h5 class="brand">Car Brand: <span class="lead">{{post.brand}}</span></h5>
		<div class="trip-info">
			<div>
				<img class="img-fluid rounded" src="{{post.image}}" alt="car-image">
			</div>
			<div class="trip-desc">
				<h5>Information about the trip</h5>
				<textarea class="lead" disabled>{{post.description}}</textarea>
				<h5>Price: <span class="lead">{{post.price}}</span> BGN</h5>

				<!-- if there are no logged in user do not show div with class actions  -->
				<div class="actions">
					<!-- Only for logged user and creator to this trip -->
					{{#if isOwner}}

					<a href="/posts/delete/{{post._id}}" class="btn btn-danger">Delete this trip</a>
					<a href="/posts/edit/{{post._id}}" class="btn btn-warning">Edit this trip</a>

					{{else}}

					{{#if hasUser}}

					{{#if post.hasJoined}}
					<!-- logged in user and has already joined the trip  -->
					<span class="btn btn-info">Already joined. Don't be late!</span>

					{{else}}

					{{#if post.hasSeats}}

					<!-- logged in user with available seats -->
					<a href="/posts/join/{{post._id}}" class="btn btn-join">Join now, [{{post.seats}}] seats left!</a>

					{{else}}

					<!-- logged in user with no available seats -->
					<span class="btn btn-secondary">No seats available! [0]</span>

					{{/if}}

					{{/if}}

					{{/if}}

					{{/if}}


				</div>

			</div>
		</div>
	</div>
</section>